                    <input type="password" class="form-control form-control-user rounded-pill" name="password" id="inputPassword"
                      placeholder="Password" autocomplete="off">
                </div>
                <hr>
                <div class="form-group">
                    <input type="password" class="form-control form-control-user rounded-pill" id="repeatPassword"
                    placeholder="Repeat Password" autocomplete="off">
                </div>
                <div class="form-group">
                    <span class="mx-auto" id='message'></span>
                </div>
                <button id="reset" class="btn btn-primary btn-user btn-block">Reset</button>
              </div>
